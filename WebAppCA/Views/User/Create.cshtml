@model WebAppCA.Models.Utilisateur
@{
    ViewData["Title"] = "Ajouter un utilisateur - TimeNeT";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-plus"></i> Ajouter un utilisateur</h2>
        <div>
            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <form asp-controller="User" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

        <!-- Section Informations Utilisateur -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Informations Utilisateur</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label asp-for="Prenom" class="fw-bold form-label">• Prénom</label>
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserType" class="fw-bold form-label">• Type d'utilisateur</label>
                            <select asp-for="UserType" class="form-select">
                                <option value="Admin">Administrateur</option>
                                <option value="Manager">Manager</option>
                                <option value="Utilisateur">Utilisateur</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold form-label">• Période</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Date début</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Heure début</label>
                                    <input asp-for="StartTime" type="time" class="form-control" />
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Date fin</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Heure fin</label>
                                    <input asp-for="EndTime" type="time" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="mb-3">
                            <label asp-for="Nom" class="fw-bold form-label">• Nom</label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Departement" class="fw-bold form-label">• Département</label>
                            <input asp-for="Departement" class="form-control" />
                            <span asp-validation-for="Departement" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Position" class="fw-bold form-label">• Titre</label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telephone" class="fw-bold form-label">• Téléphone</label>
                            <input asp-for="Telephone" class="form-control" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="fw-bold form-label">• Statut</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="statusSwitch" name="statusSwitch" checked>
                                <label class="form-check-label" for="statusSwitch">Activé</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Email" class="fw-bold form-label">• Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BadgeNumber" class="fw-bold form-label">• Numéro de badge</label>
                            <input asp-for="BadgeNumber" class="form-control" />
                            <span asp-validation-for="BadgeNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Permission -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Permission</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BioStarOperator" class="fw-bold form-label">• Opérateur BioStar</label>
                            <select asp-for="BioStarOperator" class="form-select">
                                <option value="Jamais">Jamais</option>
                                <option value="Toujours">Toujours</option>
                                <option value="Planifié">Planifié</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IPAddress" class="fw-bold form-label">• Adresse IP de l'utilisateur</label>
                            <input asp-for="IPAddress" class="form-control" placeholder="192.168.1.1" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Cartes -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Cartes</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <div class="form-check me-2">
                                    <input class="form-check-input" type="checkbox" id="pinCheck">
                                </div>
                                <label asp-for="PIN" class="fw-bold form-label mb-0">• PIN</label>
                            </div>
                            <input asp-for="PIN" type="password" class="form-control mt-2" />
                        </div>
                        <div class="card shadow-sm mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Authentification</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <!-- Section Cartes/Biométrie améliorée -->
                                        <div class="mb-3">
                                            <label class="fw-bold form-label">• Méthodes d'authentification</label>
                                            <div class="d-flex flex-wrap gap-2 mt-2">
                                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#fingerprintModal">
                                                    <i class="bi bi-fingerprint"></i> Empreinte digitale
                                                </button>
                                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#faceModal">
                                                    <i class="bi bi-emoji-smile"></i> Reconnaissance faciale
                                                </button>
                                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#cardModal">
                                                    <i class="bi bi-credit-card"></i> Carte RFID
                                                </button>
                                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#qrcodeModal">
                                                    <i class="bi bi-qr-code"></i> QR Code
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Champs cachés pour stocker les données -->
                                        <input type="hidden" asp-for="BiometricData" />
                                        <input type="hidden" asp-for="FaceData" />
                                        <input type="hidden" asp-for="CardNumber" />
                                        <input type="hidden" asp-for="QRCode" />

                                        <!-- Modal Carte RFID -->
                                        <div class="modal fade" id="cardModal" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Enregistrement de carte</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label">Scanner ou saisir le numéro de carte :</label>
                                                            <input type="text" class="form-control" id="cardInput"
                                                                   placeholder="Badgez la carte ou saisissez le numéro" />
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <button type="button" class="btn btn-primary"
                                                                onclick="document.getElementById('CardNumber').value = document.getElementById('cardInput').value; $('#cardModal').modal('hide'); showToast('Carte enregistrée !');">
                                                            Enregistrer
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Modal Empreinte digitale -->
                                        <div class="modal fade" id="fingerprintModal" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Enregistrement d'empreinte digitale</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="text-center mb-4">
                                                            <i class="bi bi-fingerprint" style="font-size: 4rem; color: #0d6efd;"></i>
                                                            <p class="mt-3">Placez votre doigt sur le lecteur biométrique</p>
                                                        </div>
                                                        <div class="progress">
                                                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                                                        </div>
                                                        <div class="text-center mt-3 d-none" id="fingerprintSuccess">
                                                            <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                                                            <p class="text-success mt-2">Empreinte enregistrée avec succès</p>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <button type="button" class="btn btn-primary d-none" id="saveFingerprintBtn"
                                                                onclick="document.getElementById('BiometricData').value = 'FINGERPRINT_DATA_' + Math.random().toString(36).substr(2, 9); $('#fingerprintModal').modal('hide'); showToast('Empreinte digitale enregistrée !');">
                                                            Enregistrer
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Modal Reconnaissance faciale -->
                                        <div class="modal fade" id="faceModal" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Enregistrement facial</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="text-center mb-4">
                                                            <div id="faceCaptureArea" style="width: 100%; height: 300px; background-color: #f0f0f0; margin: 0 auto; position: relative;">
                                                                <div class="d-flex justify-content-center align-items-center h-100">
                                                                    <i class="bi bi-camera" style="font-size: 4rem; color: #6c757d;"></i>
                                                                </div>
                                                                <div class="face-overlay" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 200px; height: 250px; border: 3px dashed #0d6efd; border-radius: 10px;"></div>
                                                            </div>
                                                            <p class="mt-3">Positionnez votre visage dans le cadre</p>
                                                        </div>
                                                        <div class="text-center mt-3 d-none" id="faceSuccess">
                                                            <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                                                            <p class="text-success mt-2">Reconnaissance faciale enregistrée</p>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <button type="button" class="btn btn-primary d-none" id="saveFaceBtn"
                                                                onclick="document.getElementById('FaceData').value = 'FACE_DATA_' + Math.random().toString(36).substr(2, 9); $('#faceModal').modal('hide'); showToast('Données faciales enregistrées !');">
                                                            Enregistrer
                                                        </button>
                                                        <button type="button" class="btn btn-outline-primary" id="captureFaceBtn">
                                                            <i class="bi bi-camera"></i> Capturer
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Modal QR Code -->
                                        <div class="modal fade" id="qrcodeModal" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Génération de QR Code</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="text-center mb-4">
                                                            <div id="qrcodeDisplay" style="width: 200px; height: 200px; margin: 0 auto; background-color: #f0f0f0; display: flex; justify-content: center; align-items: center;">
                                                                <i class="bi bi-qr-code" style="font-size: 3rem; color: #6c757d;"></i>
                                                            </div>
                                                            <p class="mt-3">Scannez ce QR Code avec l'application mobile</p>
                                                            <div class="input-group mt-3" style="max-width: 300px; margin: 0 auto;">
                                                                <input type="text" class="form-control" id="qrcodeInput" placeholder="Ou saisissez manuellement">
                                                                <button class="btn btn-outline-secondary" type="button" onclick="generateQRCode()">
                                                                    <i class="bi bi-arrow-repeat"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <button type="button" class="btn btn-primary" onclick="saveQRCode()">
                                                            Enregistrer
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save"></i> Enregistrer
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser les tooltips Bootstrap
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Mise à jour du label du switch de statut
            const statusSwitch = document.getElementById('statusSwitch');
            if (statusSwitch) {
                statusSwitch.addEventListener('change', function() {
                    const label = this.nextElementSibling;
                    label.textContent = this.checked ? 'Activé' : 'Désactivé';
                });
            }

            // Activer/désactiver le champ PIN
            const pinCheck = document.getElementById('pinCheck');
            const pinInput = document.getElementById('PIN');
            if (pinCheck && pinInput) {
                pinInput.disabled = !pinCheck.checked;
                pinCheck.addEventListener('change', function() {
                    pinInput.disabled = !this.checked;
                    if (!this.checked) {
                        pinInput.value = '';
                    }
                });
            }

            // Simulation de capture d'empreinte digitale
            $('#fingerprintModal').on('shown.bs.modal', function() {
                const progressBar = $(this).find('.progress-bar');
                const successDiv = $(this).find('#fingerprintSuccess');
                const saveBtn = $(this).find('#saveFingerprintBtn');

                // Réinitialiser l'état
                progressBar.css('width', '0%');
                successDiv.addClass('d-none');
                saveBtn.addClass('d-none');

                // Simulation de progression
                let width = 0;
                const interval = setInterval(function() {
                    width += 10;
                    progressBar.css('width', width + '%');

                    if (width >= 100) {
                        clearInterval(interval);
                        progressBar.removeClass('progress-bar-animated');
                        successDiv.removeClass('d-none');
                        saveBtn.removeClass('d-none');
                    }
                }, 300);
            });

            // Simulation de capture faciale
            $('#faceModal').on('shown.bs.modal', function() {
                const captureBtn = $(this).find('#captureFaceBtn');
                const successDiv = $(this).find('#faceSuccess');
                const saveBtn = $(this).find('#saveFaceBtn');

                // Réinitialiser l'état
                successDiv.addClass('d-none');
                saveBtn.addClass('d-none');

                captureBtn.off('click').on('click', function() {
                    // Simulation de capture
                    $(this).addClass('d-none');

                    // Afficher l'animation de capture
                    const faceArea = $('#faceCaptureArea');
                    faceArea.find('i').remove();
                    faceArea.css('background-color', '#000');

                    setTimeout(function() {
                        faceArea.css('background-color', '#f0f0f0');
                        faceArea.html('<div class="d-flex justify-content-center align-items-center h-100"><div style="width: 150px; height: 150px; background-color: #ddd; border-radius: 50%;"></div></div>');
                        successDiv.removeClass('d-none');
                        saveBtn.removeClass('d-none');
                    }, 1500);
                });
            });

            // Générer un QR Code au chargement du modal
            $('#qrcodeModal').on('shown.bs.modal', function() {
                generateQRCode();
            });
        });

        // Générer un QR Code aléatoire (simulation)
        function generateQRCode() {
            const randomCode = 'QR_' + Math.random().toString(36).substr(2, 9).toUpperCase();
            document.getElementById('qrcodeInput').value = randomCode;

            // Simulation d'affichage QR Code
            const qrDisplay = document.getElementById('qrcodeDisplay');
            qrDisplay.innerHTML = `
                <div style="text-align: center;">
                    <div style="font-family: monospace; font-size: 0.6rem; line-height: 0.6rem; letter-spacing: 0.2rem;">${randomCode}</div>
                    <div style="margin-top: 0.5rem; font-size: 0.8rem;">(Simulation QR Code)</div>
                </div>`;
        }

        // Enregistrer le QR Code
        function saveQRCode() {
            const qrCode = document.getElementById('qrcodeInput').value;
            if (qrCode) {
                document.getElementById('QRCode').value = qrCode;
                $('#qrcodeModal').modal('hide');
                showToast('QR Code enregistré avec succès !');
            } else {
                alert('Veuillez générer un QR Code d\'abord');
            }
        }

        // Fonction pour afficher des notifications toast
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer') || document.createElement('div');
            toastContainer.id = 'toastContainer';
            toastContainer.style.position = 'fixed';
            toastContainer.style.top = '20px';
            toastContainer.style.right = '20px';
            toastContainer.style.zIndex = '1100';

            const colors = {
                success: '#28a745',
                error: '#dc3545',
                warning: '#ffc107',
                info: '#17a2b8'
            };

            const toast = document.createElement('div');
            toast.className = 'toast show align-items-center text-white border-0 mb-3';
            toast.style.backgroundColor = colors[type] || colors.success;
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>`;

            toastContainer.appendChild(toast);
            document.body.appendChild(toastContainer);

            // Suppression automatique après 5 secondes
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 5000);

            // Fermeture manuelle
            toast.querySelector('button').addEventListener('click', () => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            });
        }
    </script>
}

@section Styles {
    <style>
        .card-header {
            background-color: #f8f9fa;
            font-weight: 500;
        }

        .form-label.fw-bold {
            margin-bottom: 0.5rem;
        }

        /* Style pour les boutons d'ajout de carte/biométrie */
        .btn-outline-secondary {
            border-color: #ced4da;
        }

        /* Amélioration du style pour le curseur de niveau de sécurité */
        .form-range::-webkit-slider-thumb {
            background: #0d6efd;
        }

        .form-range::-moz-range-thumb {
            background: #0d6efd;
        }

        .form-range::-ms-thumb {
            background: #0d6efd;
        }

        /* Style pour les toasts */
        .toast {
            opacity: 1;
            transition: opacity 0.3s ease;
        }

            .toast.show {
                opacity: 1;
            }

        /* Style pour la zone de capture faciale */
        .face-overlay {
            pointer-events: none;
        }
    </style>
}