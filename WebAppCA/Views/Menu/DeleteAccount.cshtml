@model WebAppCA.Models.DeleteAccountViewModel

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-trash"></i> Suppression de compte</h2>
        <a asp-controller="Menu" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    </div>

    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-exclamation-octagon"></i> Action irréversible</h5>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="alert alert-danger">
                <h5><i class="bi bi-exclamation-triangle"></i> Attention !</h5>
                <ul>
                    <li>Toutes vos données seront définitivement perdues</li>
                    <li>Les accès associés seront révoqués</li>
                    <li>Action impossible à annuler</li>
                </ul>
            </div>

            <form asp-action="DeleteAccount" method="post">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Nom d'utilisateur</label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mot de passe</label>
                    <input asp-for="Password" type="password" class="form-control"
                           placeholder="Entrez votre mot de passe pour confirmer" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Confirmation" class="form-check-input" />
                    <label asp-for="Confirmation" class="form-check-label">
                        Je comprends et accepte la suppression définitive
                    </label>
                    <span asp-validation-for="Confirmation" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill"></i> Confirmer la suppression
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>