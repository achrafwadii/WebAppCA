@model WebAppCA.Models.ToggleDoorRequest
@{
    ViewData["Title"] = "Changer le statut de la porte";
}

<h2>Changer le statut de la porte</h2>

<form asp-action="ToggleDoor" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="DoorID" />

    <div class="form-group">
        <label asp-for="Reason" class="control-label">Raison du changement:</label>
        <textarea asp-for="Reason" class="form-control" rows="3" placeholder="Optionnel: raison du changement de statut"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="ForceAction" class="form-check-input" type="checkbox" />
        <label asp-for="ForceAction" class="form-check-label">Forcer l'action</label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Changer le statut</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}