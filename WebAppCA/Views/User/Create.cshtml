@model WebAppCA.Models.Utilisateur
@{
    ViewData["Title"] = "Ajouter un utilisateur - TimeTrack";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-plus"></i> Ajouter un utilisateur</h2>
        <div>
            <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <form asp-controller="User" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

        <!-- Section Informations Utilisateur -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Informations Utilisateur</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <div class="text-center mb-3">
                            <div class="user-photo-container bg-light rounded mb-2" style="width: 150px; height: 150px; margin: 0 auto; display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-person-circle" style="font-size: 5rem; color: #ccc;"></i>
                            </div>
                            <button type="button" class="btn btn-outline-secondary btn-sm" id="btnAddPhoto">
                                <i class="bi bi-plus"></i> Ajouter photo
                            </button>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label asp-for="Prenom" class="fw-bold form-label">• Prénom</label>
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserType" class="fw-bold form-label">• Type d'utilisateur</label>
                            <select asp-for="UserType" class="form-select">
                                <option value="Admin">Administrateur</option>
                                <option value="Manager">Manager</option>
                                <option value="Utilisateur">Utilisateur</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold form-label">• Période</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Date début</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Heure début</label>
                                    <input asp-for="StartTime" type="time" class="form-control" />
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label class="form-label">Date fin</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Heure fin</label>
                                    <input asp-for="EndTime" type="time" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="mb-3">
                            <label asp-for="Nom" class="fw-bold form-label">• Nom</label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Departement" class="fw-bold form-label">• Département</label>
                            <input asp-for="Departement" class="form-control" />
                            <span asp-validation-for="Departement" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Position" class="fw-bold form-label">• Titre</label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telephone" class="fw-bold form-label">• Téléphone</label>
                            <input asp-for="Telephone" class="form-control" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="fw-bold form-label">• Statut</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="statusSwitch" name="statusSwitch" checked>
                                <label class="form-check-label" for="statusSwitch">Activé</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Email" class="fw-bold form-label">• Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BadgeNumber" class="fw-bold form-label">• Numéro de badge</label>
                            <input asp-for="BadgeNumber" class="form-control" />
                            <span asp-validation-for="BadgeNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Permission -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Permission</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="BioStarOperator" class="fw-bold form-label">• Opérateur BioStar</label>
                            <select asp-for="BioStarOperator" class="form-select">
                                <option value="Jamais">Jamais</option>
                                <option value="Toujours">Toujours</option>
                                <option value="Planifié">Planifié</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IPAddress" class="fw-bold form-label">• Adresse IP de l'utilisateur</label>
                            <input asp-for="IPAddress" class="form-control" placeholder="192.168.1.1" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Cartes -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">Cartes</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <div class="d-flex align-items-center">
                                <div class="form-check me-2">
                                    <input class="form-check-input" type="checkbox" id="pinCheck">
                                </div>
                                <label asp-for="PIN" class="fw-bold form-label mb-0">• PIN</label>
                            </div>
                            <input asp-for="PIN" type="password" class="form-control mt-2" />
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold form-label">• Mode d'authentification</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="authModeSwitch" name="authModeSwitch" checked>
                                <label class="form-check-label" for="authModeSwitch">Utiliser le mode par défaut de l'équipement</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold form-label">• Cartes</label>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-fingerprint"></i> + Empreinte digitale
                                </button>
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-emoji-smile"></i> + Visage
                                </button>
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-camera"></i> + Visual Face
                                </button>
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-credit-card"></i> + Carte
                                </button>
                                <button type="button" class="btn btn-outline-secondary">
                                    <i class="bi bi-qr-code"></i> + QR/Barcode
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SecurityLevel" class="fw-bold form-label">• Niveau de sécurité 1:1</label>
                            <div class="d-flex align-items-center">
                                <input asp-for="SecurityLevel" type="range" class="form-range w-75" min="0" max="10" step="1" value="5">
                                <span class="ms-2">Utiliser le mode par défaut de l'équipement</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mb-4">
            <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser les tooltips Bootstrap
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Mise à jour du label du switch de statut
            const statusSwitch = document.getElementById('statusSwitch');
            if (statusSwitch) {
                statusSwitch.addEventListener('change', function() {
                    const label = this.nextElementSibling;
                    label.textContent = this.checked ? 'Activé' : 'Désactivé';
                });
            }

            // Pour gérer l'ajout de photo (simulation)
            const btnAddPhoto = document.getElementById('btnAddPhoto');
            if (btnAddPhoto) {
                btnAddPhoto.addEventListener('click', function() {
                    alert('Fonctionnalité d\'ajout de photo à implémenter');
                });
            }
            
            // Activer/désactiver le champ PIN
            const pinCheck = document.getElementById('pinCheck');
            const pinInput = document.getElementById('PIN');
            if (pinCheck && pinInput) {
                pinInput.disabled = !pinCheck.checked;
                pinCheck.addEventListener('change', function() {
                    pinInput.disabled = !this.checked;
                    if (!this.checked) {
                        pinInput.value = '';
                    }
                });
            }
        });
    </script>
}

@section Styles {
    <style>
        .card-header {
            background-color: #f8f9fa;
            font-weight: 500;
        }

        .form-label.fw-bold {
            margin-bottom: 0.5rem;
        }

        /* Style pour les boutons d'ajout de carte/biométrie */
        .btn-outline-secondary {
            border-color: #ced4da;
        }

        /* Amélioration du style pour le curseur de niveau de sécurité */
        .form-range::-webkit-slider-thumb {
            background: #0d6efd;
        }

        .form-range::-moz-range-thumb {
            background: #0d6efd;
        }

        .form-range::-ms-thumb {
            background: #0d6efd;
        }
    </style>
}