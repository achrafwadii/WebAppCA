@model AboutViewModel
@{
    ViewData["Title"] = "À propos - TimeTrack";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-question-circle"></i> À propos du Système</h2>
        <a asp-controller="Menu" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Informations Système</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Version du Système:</div>
                        <div class="col-md-8">@Model.SystemVersion</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Version du Firmware:</div>
                        <div class="col-md-8">@Model.FirmwareVersion</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Numéro de Série:</div>
                        <div class="col-md-8">@Model.SerialNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Date d'Installation:</div>
                        <div class="col-md-8">@Model.InstallDate.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Dernière Mise à Jour:</div>
                        <div class="col-md-8">@Model.LastUpdate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Support & Assistance</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="https://www.supremainc.com/en/support" class="btn btn-outline-primary" target="_blank">
                            <i class="bi bi-headset"></i> Support Technique
                        </a>
                        <a href="https://www.supremainc.com/en/support/download-center.asp" class="btn btn-outline-primary" target="_blank">
                            <i class="bi bi-cloud-download"></i> Centre de Téléchargement
                        </a>
                        <a href="https://www.supremainc.com/en/support/faq.asp" class="btn btn-outline-primary" target="_blank">
                            <i class="bi bi-question-circle"></i> FAQ
                        </a>
                        <a href="https://www.supremainc.com/en/about/contact-us.asp" class="btn btn-outline-primary" target="_blank">
                            <i class="bi bi-question-circle"></i> Contacter le Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
