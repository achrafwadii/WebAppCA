@{
    ViewData["Title"] = "Bienvenue sur TimeNeT";
    Layout = null; // On n'utilise pas le layout principal pour cette page
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #1976d2;
            --secondary-color: #dc004e;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        .welcome-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }
        .welcome-card {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .welcome-row {
            display: flex;
            flex-wrap: wrap;
        }
        .welcome-image {
            flex: 1;
            min-width: 300px;
            background-color: var(--primary-color);
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
        }
        .welcome-content {
            flex: 1;
            min-width: 300px;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .logo-container {
            width: 150px;
            height: 150px;
            background-color: white;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .logo-text {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--primary-color);
        }
        .welcome-title {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            color: #333;
        }
        .welcome-subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            color: #666;
            line-height: 1.6;
        }
        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }
        .feature-icon {
            margin-right: 1rem;
            font-size: 1.5rem;
            color: var(--primary-color);
        }
        .btn-connect {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 0.8rem 2rem;
            font-size: 1.1rem;
            border-radius: 5px;
            margin-top: 2rem;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }
        .btn-connect:hover {
            background-color: #1565c0;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            color: white;
        }
    </style>
</head>
<body>
    <div class="welcome-container">
        <div class="welcome-card">
            <div class="welcome-row">
                <div class="welcome-image">
                    <div class="logo-container">
                        <div class="logo-text">TimeNeT</div>
                    </div>
                    <h2>Système de Contrôle d'Accès</h2>
                    <p class="mt-3">Version 1.0</p>
                </div>
                <div class="welcome-content">
                    <h1 class="welcome-title">Bienvenue sur TimeNeT</h1>
                    <p class="welcome-subtitle">
                        TimeTrack est une solution complète de contrôle d'accès et de gestion du temps de présence pour votre organisation.
                        Notre système intégré vous permet de gérer efficacement vos équipements, vos portes et vos utilisateurs.
                    </p>
                    
                    <div class="features mt-4">
                        <div class="feature-item">
                            <i class="bi bi-shield-check feature-icon"></i>
                            <div>Contrôle d'accès sécurisé</div>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-clock-history feature-icon"></i>
                            <div>Suivi du temps de présence</div>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-graph-up feature-icon"></i>
                            <div>Rapports détaillés</div>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-gear feature-icon"></i>
                            <div>Configuration facile</div>
                        </div>
                    </div>
                    
                    <a asp-controller="Account" asp-action="Login" class="btn-connect">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Se Connecter
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>